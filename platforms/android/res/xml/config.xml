<?xml version='1.0' encoding='utf-8'?>
<widget id="net.kmrweb.accelo" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="Accelerometer">
        <param name="android-package" value="org.apache.cordova.devicemotion.AccelListener" />
    </feature>
    <feature name="Compass">
        <param name="android-package" value="org.apache.cordova.deviceorientation.CompassListener" />
    </feature>
    <icon density="ldpi" src="www/view/icon/android/icon36.png" />
    <icon density="mdpi" src="www/view/icon/android/icon48.png" />
    <icon density="hdpi" src="www/view/icon/android/icon72.png" />
    <icon density="xhdpi" src="www/view/icon/android/icon96.png" />
    <splash density="port-ldpi" src="www/view/screen/android/screen320p.png" />
    <splash density="port-mdpi" src="www/view/screen/android/screen480p.png" />
    <splash density="port-hdpi" src="www/view/screen/android/screen800p.png" />
    <splash density="port-xhdpi" src="www/view/screen/android/screen1280p.png" />
    <splash density="land-ldpi" src="www/view/screen/android/screen320l.png" />
    <splash density="land-mdpi" src="www/view/screen/android/screen480l.png" />
    <splash density="land-hdpi" src="www/view/screen/android/screen800l.png" />
    <splash density="land-xhdpi" src="www/view/screen/android/screen1280l.png" />
    <name>AcceloSensor</name>
    <description>Sensor Data Access</description>
    <author email="kimura@kmrweb.net" href="http://cordova.io">Michihiro Kimura At net.kmrweb</author>
    <content src="index.html" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="vertical" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="true" />
    <preference name="disableOveerscroll" value="true" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="android-minSdkVersion" value="10" />
    <preference name="android-installLocation" value="auto" />
    <preference name="android-windowSoftInputMode" value="stateHidden|adjustPan" />
    <icon height="128" src="view/icon.png" width="128" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="*" />
</widget>
